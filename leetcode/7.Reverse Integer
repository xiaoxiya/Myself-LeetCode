class Solution {
    public int reverse(int x) {
        int y = 0;
        int t=0;
        if(x<0){
            t=-1;
        }else{
            t=1;
        }
        x=x*t;
        long z=0;
        while( x > 0){
            z= z*10 + x%10;
            x=x/10;
        }
        y=t*(int)z;
        z=t*z;
        if(y==z) return y;
        else return 0;            
    }
}
